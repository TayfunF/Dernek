@model IEnumerable<Director>

@{
    ViewData["Title"] = "Yönetim Kurulu";
}

<link rel="stylesheet" href="~/web/css/DirectorStyle.css" />

<div class="container mt-5 mb-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="image">
                        <img src="@item.Image" class="rounded" style="width:300px; height:250px;" />
                    </div>
                    <div class="card-inner">
                        <div class="header">
                            <h2>@item.FullName</h2>
                            @*<h3></h3>*@
                        </div>
                        <div class="content">
                            <p>@item.Role</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
