@model Blog

@{
    ViewData["Title"] = "Blog Detayları";
}

<div class="container mt-5 mb-5">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Image" class="img-fluid rounded-start" alt="Resim Yok" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text text-dark">@Model.Content</p>
                    <p class="card-text"><small class="text-muted"><i class="fa fa-clock"></i> @Model.CreatedDate.ToString("dd MMM yyyy")</small></p>
                </div>
            </div>
        </div>
    </div>
</div>